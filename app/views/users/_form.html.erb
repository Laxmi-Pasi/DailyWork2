<%= form_with(model: user) do |form| %>
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li style="color:red;"><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :first_name%>
    <%= form.text_field :first_name%><br><br>
    <%= form.label :email%>
    <%= form.text_field :email%><br><br>
    <%= form.label :avatar%>
    <%= form.file_field :avatar%><br><br>
    <%= form.label :avatars%>
    <% user.avatars.each do |avatar| %>
      <%= hidden_field :user, :avatars, multiple: true, value: avatar.identifier %>
    <% end %>
    <%= form.file_field :avatars, multiple: true %><br><br>
    <%= form.submit %>
  </div>
<% end %>

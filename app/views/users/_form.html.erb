<%= form_with(model: user) do |f| %>
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li style="color:red;"><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :first_name%>
    <%= f.text_field :first_name%>
    <%= f.label :email%>
    <%= f.text_field :email%>

    <div class="userfeedbacks">
      <%=f.fields_for :userfeedbacks do |builder|%>
        <%= render 'userfeedback_fields', f: builder %>
      <% end %>

    </div>
    <%= f.button :submit %>
    <%= link_to_add_association 'Add feedback', f, :userfeedbacks, data: {association_insertion_node: '.userfeedbacks', association_insertion_method: :append}%>
  </div>
<% end %>
